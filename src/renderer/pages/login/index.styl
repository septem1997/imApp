.content
  display: flex;
  width: 100%;
  height: 100%;
  overflow: hidden;


  .bg
    width: 230px;
    height: 370px;
    position: relative;

    img
      user-select: none;
      width: 100%;


  .loginBox
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;

    .avatar
      width: 70px;
      height @width

    .input
      display flex
      box-sizing border-box
      padding 6px 10px
      border-bottom 1px #E5E5E5



